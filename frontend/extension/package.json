{
  "name": "slash-extension",
  "displayName": "Slash",
  "version": "1.0.8",
  "description": "An open source, self-hosted links shortener and sharing platform. Save and share your links very easily.",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint --ext .js,.ts,.tsx, src",
    "lint-fix": "eslint --ext .js,.ts,.tsx, src --fix",
    "postinstall": "cd ../../proto && buf generate"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/joy": "5.0.0-beta.36",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.11.0",
    "axios": "^1.6.8",
    "classnames": "^2.5.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.399.0",
    "plasmo": "^0.88.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.33.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chrome": "^0.0.268",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.14.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "long": "^5.2.3",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "protobufjs": "^7.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "manifest": {
    "manifest_version": 3,
    "permissions": [
      "activeTab",
      "storage",
      "webRequest",
      "commands"
    ],
    "host_permissions": [
      "*://*/*"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+P",
          "mac": "Command+Shift+P"
        },
        "description": "Open Search Page"
      },
      "open-search": {
        "suggested_key": {
          "default": "Alt+E",
          "mac": "Alt+E"
        },
        "description": "Open popup and trigger search"
      }
    }
  }
}
